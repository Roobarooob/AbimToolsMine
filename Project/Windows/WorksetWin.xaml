<Window x:Class="AbimToolsMine.WorksetWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WorksetTools" Height="180" Width="400" Background="WhiteSmoke">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- TextBox для префикса связи -->
        <UniformGrid Rows="1" Grid.Row="0" Margin="0,0,50,0" HorizontalAlignment="Stretch">
            <TextBox x:Name="PrefixTextBox" Grid.Row="0"  Height="30" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center" IsEnabled="False"/>
            <TextBox x:Name="DWGTextBox" Grid.Row="0"  Height="30" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center" IsEnabled="False"/>
        </UniformGrid>
        
        <Button Grid.Row="0" Click="WorsetPrefClick" Content ="⚙️" Width="50" HorizontalAlignment="Right" VerticalAlignment="Center" Height="30"/>

        <!-- Кнопка Назначить связи по рабочим наборам -->
        <Button x:Name="AssignWorksetsButton" Grid.Row="1" Content="Назначить рабочие наборы связям" 
                Height="30" Margin="0,10,0,10" Click="AssignWorksetsButton_Click"/>

        <!-- Кнопка Фильтр пустых рабочих наборов -->
        <Button x:Name="FilterEmptyWorksetsButton" Grid.Row="2" Content="Фильтр пустых рабочих наборов" 
                Height="30" Click="FilterEmptyWorksetsButton_Click"/>
    </Grid>
</Window>