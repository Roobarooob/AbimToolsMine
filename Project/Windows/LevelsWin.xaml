<Window x:Class="AbimToolsMine.LevelsWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Работа с уровнями" Height="150" Width="400" 
        WindowStartupLocation="CenterScreen"
        Background="#FFF0F0F0"
    FontFamily="Segoe UI"

    ResizeMode="NoResize">


    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Поле ввода с меткой -->
        <Grid Grid.Row="0"  HorizontalAlignment="Stretch" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Имя параметра" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="14" HorizontalContentAlignment="Right"/>
            <TextBox x:Name="ParName" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Stretch" Width="Auto"
                     Text="" 
                     Background="White" 
                     BorderBrush="#FFCCCCCC" 
                     Padding="5" 
                     FontSize="14" />
        </Grid>

        <!-- Кнопки -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button  Content="Проверить привязку" Margin="5" Padding="15,7"  Click="GetLevelLinks"/>

            <Button Content="Перенести параметры" Margin="5" Padding="15,7" Click="SetToParameter"/>
        </StackPanel>
    </Grid>
</Window>