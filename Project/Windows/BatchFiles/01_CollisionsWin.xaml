<Window x:Class="AbimToolsMine.CollisionsWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Пакетная обработка" Height="450" Width="660" MinWidth="660" MinHeight="400" Background="WhiteSmoke" Closing="Window_Closing">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Блок добавления файлов -->
        <GroupBox Header="Добавить файлы" Grid.ColumnSpan="3" Margin="0,0,0,10">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="35"/>
                </Grid.ColumnDefinitions>
                <Button Content="Revit Server" Grid.Column="0" Click="RevitServer_Click"/>
                <Button Content="Из директории" Grid.Column="1" Click="AddRvtFiles_Click"/>
                <Button Content="Добавить папку" Grid.Column="2" Click="AddRvtFolder_Click"/>
                <Button Content="🗑️" Grid.Column="3" Click="ClearList"/>
            </Grid>
        </GroupBox>

        <!-- Список файлов -->
        <ListBox x:Name="RvtFilesListBox" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,10" HorizontalContentAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding}" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0" TextTrimming="CharacterEllipsis"/>
                        <Button Content="-" Foreground="Red" Width="20" Height="20" Grid.Column="1" Click="RemoveRvtFile_Click"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Выбор XML -->
        <Button Content="Выбор файла Xml" Grid.Row="2" Grid.Column="0" Margin="0,0,10,10" Click="SelectXmlFile_Click"/>
        <TextBox x:Name="XmlFilePath" Grid.Row="2" Grid.Column="1" IsReadOnly="True" Margin="0,0,0,10" Background="WhiteSmoke"/>
        <Button Content="Загрузить коллизии" Grid.Row="2" Grid.Column="2" Width="130" Margin="10,0,0,10" Click="StartProcessing_Click" Background="#FFC85A5A" Foreground="White"/>

        <!-- Путь NWC -->
        <Button Content="Путь NWC" Grid.Row="3" Grid.Column="0" Margin="0,0,10,10" Click="SelectNWCPath_Click"/>
        <Grid Grid.Row="3" Grid.Column="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="NwcFilePath" Grid.Column="0" IsReadOnly="True" Background="WhiteSmoke"/>
            <Button Width="35" Grid.Column="1" Content="⚙️" Click="WorsetPrefClick" Margin="5,0,0,0"/>
        </Grid>
        <Button Content="Экспорт NWC" Grid.Row="3" Grid.Column="2" Width="130" Margin="10,0,0,10" Click="ExportNWC_Click" Background="#FF358611" Foreground="White"/>

        <!-- Файл семейства -->
        <Button Content="Выбор файла семейства" Grid.Row="4" Grid.Column="0" Margin="0,0,10,10" Click="SelectRfaFile_Click"/>
        <Grid Grid.Row="4" Grid.Column="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="rfaFilePath" Grid.Column="0" IsReadOnly="True" Background="WhiteSmoke"/>
            <CheckBox x:Name="ReplaceParameters" Grid.Column="1" IsChecked="False" FontSize="10" VerticalAlignment="Center" Margin="10,0,0,0" Checked="ReplaceParameters_Checked">
                <TextBlock Text="С заменой параметров"/>
            </CheckBox>
        </Grid>
        <Button Content="Загрузить семейства" Grid.Row="4" Grid.Column="2" Width="130" Margin="10,0,0,10" Click="Download_Click"/>

        <!-- Кнопки снизу -->
        <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5,0,0">
            <Button Content="Удалить связи" Click="LinkRemove_Click" Margin="0,0,10,0"/>
            <Button Content="Добавить параметры" Click="ParameterTools_Click"/>
        </StackPanel>
    </Grid>
</Window>
